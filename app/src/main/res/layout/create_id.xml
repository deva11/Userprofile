<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#10EAFD">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:gravity="center_vertical"
		android:padding="10dp"
		android:background="#10EAFD"
		
		android:focusableInTouchMode="true">

		<EditText
			android:hint="First Name"
			android:id="@+id/et_reg_firstname"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:layout_width="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_marginTop="30dp"/>

		<EditText
			android:hint="Last Name"
			android:id="@+id/et_reg_lastname"
			android:layout_height="wrap_content"
			android:inputType="textPersonName"
			android:ems="10"
			android:layout_width="wrap_content"
			android:layout_marginBottom="10dp"/>

		<EditText
			android:hint="Email_id"
			android:id="@+id/et_reg_email"
			android:layout_height="wrap_content"
			android:inputType="textEmailAddress"
			android:ems="10"
			android:layout_width="wrap_content"
			android:layout_marginBottom="10dp"/>

		<EditText
			android:hint="Password"
			android:id="@+id/et_reg_passwd"
			android:layout_height="wrap_content"
			android:inputType="textPassword"
			android:ems="10"
			android:layout_width="wrap_content"
			android:layout_marginBottom="10dp"/>

		<EditText
			android:layout_height="wrap_content"
			android:hint="Mobile Number"
			android:inputType="phone"
			android:ems="10"
			android:layout_width="wrap_content"
			android:layout_marginBottom="10dp"
			android:id="@+id/et_reg_phone"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			
			android:focusableInTouchMode="true">

			<TextView
				android:layout_height="match_parent"
				android:text="DD/MM/YYYY"
				android:ems="10"
				android:layout_width="wrap_content"
				android:layout_marginBottom="10dp"
				android:textSize="20dp"
				android:id="@+id/tv_reg_dob"
				android:layout_marginLeft="10dp"
				android:gravity="left|center"/>

			<Button
				android:layout_height="match_parent"
				style="?android:attr/buttonStyleSmall"
				android:text="..."
				android:onClick="Adata"
				android:layout_width="wrap_content"
				android:id="@+id/butt_reg_dob"
				android:layout_marginBottom="10dp"/>

		</LinearLayout>

		<EditText
			android:layout_height="wrap_content"
			android:hint="Address"
			android:inputType="textPostalAddress"
			android:layout_width="match_parent"
			android:layout_marginBottom="10dp"
			android:id="@+id/et_reg_addr"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:id="@+id/et_reg_addr"
			
			android:focusableInTouchMode="true">

			<TextView
				android:layout_height="wrap_content"
				android:text="AOI"
				android:ems="10"
				android:layout_width="wrap_content"
				android:layout_marginBottom="10dp"
				android:layout_marginLeft="10dp"
				android:textSize="20dp"
				android:id="@+id/tv_reg_sel_int"
				android:gravity="left"/>

			<Spinner
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginLeft="10dp"
				android:id="@+id/spinner_reg_aoi"
				android:text="Area of Interest"
				/>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

